            <div class="span4">
                <div class="col-md-4">
                    <a href="@Html.DisplayFor(modelItem => modelItem.Name)">
                        <img src="@Url.Content(@Model.ImagePath)" class="img-responsive center-block" style="border:1px solid #e6e6e6">
                    </a>
                    <div class="button-1">
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">Get your discount coupon</button>
                    </div>
                    <p id="offer-2">@Html.DisplayFor(modelItem => modelItem.Name)</p>
                </div>
            </div>
        <div class="col-md-10" style="border:none;">
            <div class="col-md-12">
                @foreach (var item in Model.Coupons)
                {
                    <div class="span4">
                        <div class="col-md-4">
                            <a href="@item.Name">
                                <p id="offer-1">@item.Name</p>
                                <a href="/Coupon/Details/@item.Id">
                                    <img src="@item.ImagePath"
                                         alt="@item.Name" class="img-responsive" style="max-width: 100%;height: 300px;" />
                                </a>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <br clear="all">
    </div>

