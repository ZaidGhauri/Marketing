@using Kendo.Mvc.UI;
@model Marketing.Business.Models.Store

@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="our">OUR STORES </h2>
<hr>
<div class="rec-deals">
    <div class="col-md-12">

        @*@{
