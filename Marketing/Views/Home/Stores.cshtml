@model List<Marketing.Business.Models.Store>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<h2 id="our"> Stores </h2>
<hr>
<div class="col-md-12">
    @foreach (var item in Model)
    {
        <div class="span4">
            <div class="col-md-4">
                <a href="@item.Name"><p id="offer-1">@item.Name</p>
                    @*<img src="@Url.Content(@item.img)" class="img-responsive center-block" style="border:1px solid #e6e6e6">*@</a>
                                  
                <div class="button-1">
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">Get your discount coupon</button>
                </div>
            </div>
        </div>}

</div>

<br clear="all">
@foreach (var item in Model)
{
          <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Copy the code</h4>
                </div>
                <div class="modal-body">
                    <p>Go to and paste the code checkout at .<a href="@Html.DisplayFor(modelItem => item.Name)"></a> </p>
                </div>
                <div class="modal-footer">
                                           @*<img src="@Url.Content(@item.img)" class="img-responsive center-block" style="border:1px solid #e6e6e6">*@
                   <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>}