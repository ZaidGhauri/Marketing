@model List<Marketing.Business.Models.Store>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="our"> Stores </h2>
<hr>
<div class="three-box-top-event">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="im-image">
                        <a href="/Store/Details/@item.Id">
                            <img src="@item.ImagePath"
                                 alt="@item.Name" class="img-responsive" style="max-width: 100%;height: 300px;">
                        </a>
                        <div class="cont-">
                            <a id="hed" href="/Store/Details/@item.Id">@item.Name</a>    
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

