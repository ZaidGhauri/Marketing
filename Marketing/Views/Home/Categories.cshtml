@model List<Marketing.Business.Models.Category>

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="our"> Categories </h2>
<hr>
<div class="col-md-12">
    @foreach (var item in Model)
    {
        <div class="col-md-4" style="border:none;background-color:#f6f6f6;margin-top: 15px;">

            <div class="nav">
                <ul id="p04">
                    @Html.ActionLink(item.Name, "Details", "Store", new { id = item.Id }, null)
                </ul>

            </div>
        </div>
    }

    @Html.Partial("_Coupon")
</div>

<br clear="all">
