@model List<Marketing.Business.Models.Category>

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<br>

<div class="three-box-top-event">
    <div class="container">
        <h2 style="text-align:left;">Categories </h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="im-image">
                        <a href="/Store/Details/@item.Id">
                            <img src="@item.ImagePath"
                                 alt="@item.Name" class="img-responsive" style="max-width: 100%;height: 300px;">
                        </a>
                        <div class="cont-">
                            <a id="hed" href="/Store/Details/@item.Id">@item.Name</a>
                            <p class="con-para">@item.Description</p>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>