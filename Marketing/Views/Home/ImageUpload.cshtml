@{
    ViewBag.Title = "ImageUpload";
}

<h2>ImageUpload</h2>

@using (Html.BeginForm("ImageUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        Select Image
        <input type="file" name="file" />&nbsp;&nbsp;&nbsp;
        <input type="submit" value="Upload Image" name="Command" /><br />
        Preview:<br />
        <img src="@ViewBag.ImageURL" width="200px" height="200px" />
    </div>
    <div>
        @ViewBag.Message
    </div>
}